<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    <route id="pamil.command_cart.pick_up_cart" path="/{cartId}" methods="POST">
        <default key="_controller">pamil.command_cart.pick_up_cart.action</default>
    </route>

    <route id="pamil.command_cart.add_cart_item" path="/{cartId}/items" methods="POST">
        <default key="_controller">pamil.command_cart.add_cart_item.action</default>
    </route>

    <route id="pamil.command_cart.adjust_cart_item_quantity" path="/{cartId}/items" methods="PUT">
        <default key="_controller">pamil.command_cart.adjust_cart_item_quantity.action</default>
    </route>

    <route id="pamil.command_cart.remove_cart_item" path="/{cartId}/items" methods="DELETE">
        <default key="_controller">pamil.command_cart.remove_cart_item.action</default>
    </route>
</routes>
